{% extends 'admin/base.html.twig' %}
{% block body %}
    <div class="container">

        <div class="content">
            <br>
            <div class="row">
                <div class="col-lg-12">
                    <div id="register-form">
                        {{ form_start(form) }}
                        <div class="form-group">
                            {{ form_label(form.username) }}
                            {{ form_widget(form.username) }}
                            <div class="alert-danger" style="border-radius: 5px">
                                {{ form_errors(form.username) }}
                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_label(form.email) }}
                            {{ form_widget(form.email) }}
                            <div class="alert-danger" style="border-radius: 5px">
                                {{ form_errors(form.email) }}
                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_label(form.password) }}
                            {{ form_widget(form.password) }}
                            <div class="alert-danger" style="border-radius: 5px">
                                {{ form_errors(form.password) }}
                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_label(form.accessRoles) }}
                            {{ form_widget(form.accessRoles) }}
                            <div class="alert-danger" style="border-radius: 5px">
                                {{ form_errors(form.accessRoles) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-sm-6 col-sm-offset-3">
                                    <input type="submit" tabindex="4" class="form-control btn btn-success" value="Save">
                                </div>
                            </div>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}